<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EachStockInfo"
    android:orientation="vertical">

    <Button
        android:id="@+id/BackBtn"
        android:layout_width="62dp"
        android:layout_height="30dp"
        android:background="@color/whiteclear"
        android:text="BACK"
        android:textColor="@color/gametheme"/>

    <TextView
        android:id="@+id/ReciveStockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="받아온 주식이름"
        android:textColor="@color/gametheme"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:text="Stock Price : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReciveStockPrice"
            android:hint="PRICE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gametheme"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:text="SeedMoney : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seedmoney"
            android:hint="MY SEED"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/gametheme"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/Buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUYING"
        android:layout_gravity="right"
        android:background="@drawable/button_color_drawable"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="SELLING"
        android:background="@drawable/button_color_drawable"
        android:layout_marginTop="10dp"/>

</LinearLayout>